{
  "name": "@bf-to-do/api",
  "version": "0.0.1",
  "description": "Esse projeto é referente ao desenvolvimento de aplicação Full-Stack simples de gerenciamento de tarefas (To-Do-List).",
  "author": "Bernardo Freguglia",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm env:load nest build",
    "start": "pnpm env:load nest start",
    "start:dev": "pnpm env:load nest start --watch",
    "start:debug": "pnpm env:load nest start --debug --watch",
    "start:prod": "pnpm env:load node dist/main",
    "env:load": "dotenv -e ../../.env --",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@bf-to-do/eslint-config": "workspace:*",
    "@bf-to-do/prettier": "workspace:*",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@prisma/client": "^5.20.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.20.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prettier": "@bf-to-do/prettier",
  "eslintConfig": {
    "extends": [
      "@bf-to-do/eslint-config/node"
    ]
  }
}
