{
  "name": "@bf-to-do/api",
  "version": "0.0.1",
  "description": "Esse projeto é referente ao desenvolvimento de aplicação Full-Stack simples de gerenciamento de tarefas (To-Do-List).",
  "author": "Bernardo Freguglia",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm env:load nest build",
    "start": "pnpm env:load nest start",
    "dev": "pnpm env:load nest start --watch",
    "debug": "pnpm env:load nest start --debug --watch",
    "prod": "pnpm env:load node dist/main",
    "env:load": "dotenv -e ../../.env --",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio",
    "test": "pnpm env:load vitest run",
    "test:watch": "pnpm env:load vitest",
    "test:cov": "pnpm env:load vitest run --coverage",
    "test:debug": "pnpm env:load vitest run --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "pnpm env:load vitest run --config ./vitest.config.e2e.mjs"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@bf-to-do/eslint-config": "workspace:*",
    "@bf-to-do/prettier": "workspace:*",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@prisma/client": "^5.20.0",
    "@swc/core": "^1.7.35",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.1.2",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.20.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.2"
  },
  "prettier": "@bf-to-do/prettier",
  "eslintConfig": {
    "extends": [
      "@bf-to-do/eslint-config/node"
    ]
  }
}
